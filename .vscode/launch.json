{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug kasparustwallet",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/kasparustwallet",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "cargo build"
        },
        {
            "name": "Debug with arguments",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/kasparustwallet",
            "args": ["${input:args}"],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "cargo build"
        },
        {
            "name": "Debug Tests",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/deps/kasparustwallet",
            "args": ["test", "--no-run"],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "cargo test"
        }
    ],
    "inputs": [
        {
            "id": "args",
            "description": "Command line arguments",
            "default": "new --network mainnet",
            "type": "promptString"
        }
    ]
}